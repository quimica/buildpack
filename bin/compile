#!/usr/bin/env bash

set -e

# clean up leaking environment
unset GIT_DIR

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_DIR="$(dirname "$(dirname "$0")")"

mkdir -p "$BUILD_DIR/bin/"
mkdir -p "$BUILD_DIR/nginx"
tar -zxvf "nginx-$STACK".tgz -C "$BUILD_DIR/nginx"

cp "$BUILD_DIR/nginx/nginx" "$BUILD_DIR/bin/nginx"

nginx_version=$($BUILD_DIR/bin/nginx -V 2>&1 | head -1 | awk '{ print $NF }')
echo "-----> nginx-buildpack: Installed ${nginx_version} to app/bin"
cp bin/start-nginx "$BUILD_DIR/bin/"
echo '-----> nginx-buildpack: Added start-nginx to app/bin'
cp bin/start-nginx-solo "$BUILD_DIR/bin/"
echo '-----> nginx-buildpack: Added start-nginx-solo to app/bin'

mkdir -p "$BUILD_DIR/conf"

if [[ ! -f $BUILD_DIR/conf/mime.types ]]; then
	cp "$BUILD_DIR/nginx/mime.types" "$BUILD_DIR/conf/"
	echo '-----> nginx-buildpack: Default mime.types copied to app/conf/'
else
	echo '-----> nginx-buildpack: Custom mime.types found in app/conf.'
fi

if [[ ! -f $BUILD_DIR/conf/nginx.conf.erb ]]; then
	cp conf/nginx.conf.erb "$BUILD_DIR/conf/"
	echo '-----> nginx-buildpack: Default config copied to app/conf.'
else
	echo '-----> nginx-buildpack: Custom config found in app/conf.'
fi

# cleanup
rm -r "$BUILD_DIR/nginx"

exit 0
